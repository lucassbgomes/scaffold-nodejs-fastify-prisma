{
  "name": "scaffold-nodejs-fastify-prisma",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=18 <20.6.0"
  },
  "scripts": {
    "build": "tsup src",
    "start:dev": "tsx watch src/index.ts",
    "start": "npm run build && node dist/index.cjs",
    "lint": "eslint . --ext .ts",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "test": "vitest run --dir src/test/use-cases",
    "test:watch": "vitest --dir src/test/use-cases",
    "test:create-prisma-env": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-env": "npm link vitest-environment-prisma",
    "pretest:e2e": "run-s test:create-prisma-env test:install-prisma-env",
    "test:e2e": "vitest run --dir src/test/http",
    "test:e2e:watch": "vitest --dir src/test/http",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "node.js",
    "fastify",
    "prisma"
  ],
  "author": "Lucas Santa BÃ¡rbara Gomes",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "9.1.0",
    "@fastify/jwt": "7.2.2",
    "@prisma/client": "5.5.2",
    "bcryptjs": "2.4.3",
    "dotenv": "16.3.1",
    "fastify": "4.24.3",
    "pg": "8.11.3",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.5",
    "@types/node": "20.8.9",
    "@types/supertest": "2.0.15",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.9.0",
    "@vitest/coverage-v8": "0.34.6",
    "@vitest/ui": "0.34.6",
    "eslint": "8.52.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "prisma": "5.5.2",
    "supertest": "6.3.3",
    "tsup": "7.2.0",
    "tsx": "3.14.0",
    "typescript": "5.2.2",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "0.34.6"
  }
}
